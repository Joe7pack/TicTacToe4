<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"

    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <Button
        android:id="@+id/start_player"
        android:text="@string/start_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"        
        />
        
    <Button
        android:id="@+id/start_comp"
        android:text="@string/start_comp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_below="@id/start_player"
        />
     
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ad_one_player"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        ads:adUnitId="a14c4786f7a05ac"
        ads:adSize="BANNER"
        android:layout_alignParentBottom="true" />
        <!-- ads:testDevices="TEST_EMULATOR, TEST_DEVICE_ID"
        ads:loadAdOnCreate="true" -->


     
        
</RelativeLayout>

