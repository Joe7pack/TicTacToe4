 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"  
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
        
    
    <com.guzzardo.android.willyshmo.tictactoe4.library.GameView
        android:id="@+id/game_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

    <!-- TextView
        android:id="@+id/info_turn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dip"
        
        android:textSize="18px"
        / -->

    <Button
        android:id="@+id/next_turn"
        android:text="I'm done"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        />
        
    <LinearLayout 
  		android:orientation="horizontal"
   		android:layout_width="fill_parent"
   		android:layout_height="wrap_content"
   		android:gravity="center_horizontal"
   	>
    	
   		<ImageView
       		android:id="@+id/player1_token"
       		android:scaleType="fitCenter"
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:gravity="left"
       		/>         	
    	
    	<TextView
        	android:id="@+id/player1_score"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:padding="10dip"
        	android:gravity="left"
        	android:text="000"
        	/> 
        		
        		
		<EditText
        	android:id="@+id/player1_name"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:padding="10dip"
        	android:gravity="left"
        	android:text="Player 1"
        	android:editable="false"
            android:textColor="#000000"           	
        	/>         		
        		
        		
    	<TextView
        	android:id="@+id/score_literal"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:padding="10dip"
        	android:gravity="center_horizontal"
        	android:text="Score"
        	/> 
        		
		<EditText
        	android:id="@+id/player2_name"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:padding="10dip"
        	android:gravity="right"
        	android:text="Player 2"
        	android:editable="false"
            android:textColor="#000000"           	
        	/> 
        		
        		        		
    	<TextView
        	android:id="@+id/player2_score"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:padding="10dip"
        	android:text="000"
        	/> 
        		
   		<ImageView
       		android:id="@+id/player2_token"
       		android:scaleType="fitCenter"
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		/>    
	</LinearLayout>

